<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_form_comment"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/edtContentCmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_layout_border"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="top|left"
                android:hint="@string/hint_comment_product"
                android:minLines="4"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/activity_horizontal_xs_margin"
                android:paddingTop="2dp"
                android:textColorHint="@color/grey_text"
                android:textSize="@dimen/textSizeCADP" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="14dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:id="@+id/ll_button_send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnHeight"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_drable_dark"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bt_send"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btnTextSize" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>