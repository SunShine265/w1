<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wo1haitao.activities.MainActivity"
    android:background="@color/dark_grey">
    <include layout="@layout/actionbar_custom_profile_setting"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.wo1haitao.activities.MainActivity"
        android:background="@color/dark_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/wall"
                android:gravity="center">
                <LinearLayout
                    android:background="@drawable/user_circle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center">
                    <com.wo1haitao.controls.RoundedImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/photo"/>
                </LinearLayout>
            </LinearLayout>
            <!--username edittext-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/custom_row_bottom_border"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile_rnd"
                    />

                 <com.wo1haitao.controls.CustomEditextSoftkey
                    android:id="@+id/et_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="@string/form_username"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/activity_horizontal_xs_margin"
                    android:textColorHint="@color/grey_text"
                    android:textSize="@dimen/textSize" />
            </LinearLayout>

            <!--lastname edittext-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/custom_row_bottom_border"
                >
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    />
                 <com.wo1haitao.controls.CustomEditextSoftkey
                    android:id="@+id/et_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_xs_margin"
                    android:background="@android:color/transparent"
                    android:hint="@string/form_lastname"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize"
                    android:textColorHint="@color/grey_text"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:inputType="text" />
            </LinearLayout>

            <!--first name edittext-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/custom_row_bottom_border"
                >
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    />
                 <com.wo1haitao.controls.CustomEditextSoftkey
                    android:id="@+id/et_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_xs_margin"
                    android:background="@android:color/transparent"
                    android:hint="@string/form_firstname"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize"
                    android:textColorHint="@color/grey_text"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:inputType="text" />
            </LinearLayout>

            <!--Contact telephone number edittext-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/custom_row_bottom_border"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/msg_round"
                    />
                 <com.wo1haitao.controls.CustomEditextSoftkey
                    android:id="@+id/et_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_xs_margin"
                    android:hint="@string/form_telephone_profile"
                    android:background="@android:color/transparent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize"
                    android:textColorHint="@color/grey_text"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:inputType="text" />
            </LinearLayout>

            <!--Contry edittext-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_row_bottom_border"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/contact_icon"
                    />

                <Spinner
                    android:id="@+id/sp_choose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <!--change password textview-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@color/dark_grey"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock_rnd"
                    />
                <com.wo1haitao.controls.CustomTextViewFixSize
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_xs_margin"
                    android:background="@android:color/transparent"
                    android:text="@string/txt_change_password"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--current password edittext-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/custom_row_bottom_border"
                >
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    />
                 <com.wo1haitao.controls.CustomEditextSoftkey
                    android:id="@+id/et_current_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_xs_margin"
                    android:background="@android:color/transparent"
                    android:hint="@string/form_current_password"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize"
                    android:textColorHint="@color/grey_text"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:inputType="text" />
            </LinearLayout>

            <!--new password edittext-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/custom_row_bottom_border"
                >
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    />
                 <com.wo1haitao.controls.CustomEditextSoftkey
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_xs_margin"
                    android:background="@android:color/transparent"
                    android:hint="@string/form_new_password"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize"
                    android:textColorHint="@color/grey_text"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/custom_row_bottom_border"
                >
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    />
                 <com.wo1haitao.controls.CustomEditextSoftkey
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_xs_margin"
                    android:background="@android:color/transparent"
                    android:hint="@string/form_profile_confirm_password"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize"
                    android:textColorHint="@color/grey_text"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:inputType="text" />
            </LinearLayout>

            <Button

                android:id="@+id/btn_to_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnHeight"
                android:layout_marginLeft="@dimen/activity_horizontal_xs_margin"
                android:layout_marginRight="@dimen/activity_horizontal_xs_margin"
                android:background="@drawable/button_drable_dark"
                android:text="@string/btn_save_changes"
                android:textColor="@color/white"
                android:textSize="@dimen/btnTextSize" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

